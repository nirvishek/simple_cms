<!doctype html>
 <html>
 <head>
 	<title>Sections Edit</title>
 </head>
<%= link_to("<< Back to List", {:action => 'index'} , :class => 'back-link') %>

<div class = "Sections edit">
	<h2>Update Sections</h2>
	
<%= form_for(:section, :url => { :action => 'update' , :id => @section.id }) do |f| %>

	<table summary = "Section form field">
		<tr>
			<th>Name:</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Position:</th>
			<td><%= f.text_field(:position) %></td>
		</tr>
		<tr>
			<th>Visible:</th>
			<td><%= f.text_field(:visible) %></td>
		</tr>
		<tr>
			<th>Conteny Type:</th>
			<td><%= f.text_field(:conten_type) %></td>
		</tr>
		<tr>
			<th>Content:</th>
			<td><%= f.text_field(:content) %></td>
		</tr>
		
	</table>
	<div class="form_buttons">
		<%= submit_tag("Update Section") %>
	</div>
<% end %>

</div>	

</html>			
